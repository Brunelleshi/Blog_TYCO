<article class="blog-post">
    <!--titulo-->
    <h2 class="blog-post-title mb-1"><%= @article.title %></h2>
    <!--data e usuario que postou-->
    <p class="blog-post-meta"><%= render 'article_detail', article: @article %></p>
    <!--corpo do artigo-->
    <p><%= @article.body %><p>
    <!--botÃµes-->
    <%= link_to 'Back', root_path, class: "btn btn-primary" %>
    <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-secondary" if policy(@article).update? %>
    <%= link_to 'Exclude', article_path(@article),
        method: :delete,
        data: { confirm: 'Are you sure?' }, 
        class: "btn btn-danger" if policy(@article).destroy? %>

    <h2>Add a comment</h2>
    <%= render 'comments/form' %>

    <h2 class="mt-3" >Comments</h2>
        <%= render @article.comments %>
</article>